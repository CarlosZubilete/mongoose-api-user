{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist", // exit directory for compiled files 
    "rootDir": "./src", // root directory of source files
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src", // base for the paths
    "paths": {
      "@controllers/*": ["controllers/*"] ,
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@server/*": ["server/*"],
      "@config/*": ["config/*"]
    }
  },
  "include":["src"],
  "exclude": ["node_modules"],
  "ts-code": ["tsconfig-paths/register"]
}
